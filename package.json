{
  "name": "srn-toolkit",
  "version": "1.4.0",
  "description": "Toolkit for Development",
  "main": "./out/main/main.js",
  "author": "sunrisenew",
  "homepage": "https://sunrisenew.cn",
  "scripts": {
    "lint": "eslint --cache --fix .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "start": "pnpm run dev",
    "dev": "electron-vite dev -w",
    "preview": "electron-vite preview",
    "build": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:linux": "pnpm run build && electron-builder --linux",
    "docs:build": "vuepress-vite build docs",
    "docs:clean-dev": "vuepress-vite dev docs --clean-cache",
    "docs:dev": "vuepress-vite dev docs",
    "docs:update-package": "pnpm dlx vp-update"
  },
  "dependencies": {
    "@electron-toolkit/preload": "3.0.2",
    "@electron-toolkit/utils": "4.0.0",
    "@vuepress/plugin-prismjs": "2.0.0-rc.115",
    "cross-spawn": "7.0.6",
    "driver.js": "1.3.6",
    "electron-serve": "3.0.0",
    "electron-updater": "6.6.2",
    "globby": "15.0.0",
    "lodash-es": "4.17.21",
    "mermaid": "11.12.0",
    "naive-ui": "2.43.1",
    "pinia": "3.0.3",
    "vue": "3.5.22",
    "vue-router": "4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "3.1.0",
    "@electron-toolkit/tsconfig": "2.0.0",
    "@sicons/ionicons5": "0.13.0",
    "@types/node": "22.18.12",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vuepress/bundler-vite": "2.0.0-rc.26",
    "electron": "38.4.0",
    "electron-builder": "26.0.12",
    "electron-vite": "4.0.1",
    "eslint": "9.38.0",
    "eslint-plugin-vue": "10.5.1",
    "jiti": "2.6.1",
    "sass-embedded": "1.93.2",
    "stylus": "0.64.0",
    "typescript": "5.9.3",
    "vite": "7.1.12",
    "vue-tsc": "3.1.1",
    "vuepress": "2.0.0-rc.26",
    "vuepress-theme-hope": "2.0.0-rc.96"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
